@model BakeMyWorld.Website.Data.Entities.Category

@{
    ViewData["Title"] = "Chosen Category";
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>

@foreach (var cake in Model.Cakes)
{
    <a asp-route="cakedetails" asp-route-urlSlug="@cake.UrlSlug">
        <div>@cake.Name</div>
        <div>@cake.Description</div>
        <div>@cake.ImageUrl</div>
        <div>@cake.Price</div>
    </a>

}


<div>
    <a asp-area="" asp-controller="Categories" asp-action="Index">Back to List</a>
</div>
